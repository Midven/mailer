<div class="row justify-content-center">
    <div class="col-10">       
        
        <%= form_with(scope: :session, url: login_path,  class: "shadow p-3 mb-5 bg-light rounded", local:true) do |f| %>
        <!--Pour une formulaire de session je dois mettre scope: :session et prÃ©ciser le chemin de login dans url-->
        
        
        <div class="form-group row mt-4">
            <%= f.label :email, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
                <%= f.email_field :email, class:"form-control shadow rounded", placeholder: "Enter your email" %>
            </div>
        </div>
        
        <div class="form-group row mt-4">
            <%= f.label :password, class: "col-2 col-form-label text-dark" %>
            <div class="col-10">
                <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Enter your password" %>
            </div>
        </div>
        
        <div class="form-group text-center mt-4">
            <%= f.submit "Login", class: "btn btn-outline-dark btn-lg" %><br/>
        </end>
        <% end %>
        
        
    </div>
    
    <%= link_to '[ Cancel and return to the Homepage ]', root_path, class: "row justify-content-center mt-2 text-dark" %>

</div>