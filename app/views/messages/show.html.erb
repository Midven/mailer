<%= render @message %>

<div class="mt-3">
  <%= link_to "Edit this message", edit_message_path(@message), class: "link-dark" %> |
  <%= link_to "Back to messages", messages_path, class: "link-dark" %>

  <%= button_to "Destroy this message", @message, method: :delete, class: "btn btn-danger mt-3" %>
</div>
