    <%= form.label :content, class: "col-2 col-form-label text-dark" %>
    <div class="col-10 trix-content">
      <%= form.rich_text_area :content, rows: 10, class: "form-control shadow rounded" %>
    </div>
  </div>

  <div>
    <%= form.submit class: "btn btn-outline-dark btn-lg mt-3" %>
  </div>
<% end %>
