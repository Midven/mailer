<p>
    <%= link_to 'Back to my messages', messages_path, class: "btn btn-outline-dark btn-lg mt-3" %>
    <%= link_to 'Send this message', new_message_mail_sent_path, class: "btn btn-outline-dark btn-lg mt-3" %>
</p>



<table class="table table-dark mt-3">
    <thead>
        <th>
            Title
        </th>
        <th>
            Recipient
        </th>
        <th>
            Date
        </th>
    </thead>
    <tbody>
        <% @mails.each do |mail| %>
        <tr>
            <td class="pb-4 pt-4">
                <%= mail.title %>
            </td>
            <td class="pb-4 pt-4">
                <%= mail.recipient %>
            </td>
            <td class="pb-4 pt-4">
                <%= time_ago_in_words(mail.updated_at) %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <%= link_to 'Back to my messages', messages_path, class: "btn btn-outline-dark btn-lg mt-3" %>
    <%= link_to 'Send this message', new_message_mail_sent_path, class: "btn btn-outline-dark btn-lg mt-3" %>
</p>


